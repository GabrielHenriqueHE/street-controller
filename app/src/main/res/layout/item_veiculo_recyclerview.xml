<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/app_background"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="32dp"
        android:paddingHorizontal="16dp"
        >

        <ImageView
            android:id="@+id/icon_vehicle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"

            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"

            android:src="@drawable/ic_helmet"

            />

        <TextView
            android:id="@+id/item_txt_modelo"
            style="@style/text_view_subtitle"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_toEndOf="@id/icon_vehicle"
            android:layout_alignParentTop="true"

            tools:text="CG 160 Fan" />

        <TextView
            android:id="@+id/item_txt_marca"
            style="@style/text_view_content"
            android:textSize="16sp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_toEndOf="@id/icon_vehicle"
            android:layout_below="@id/item_txt_modelo"

            android:layout_marginTop="2dp"

            tools:text="Honda"
            />

        <TextView
            android:id="@+id/item_txt_placa"
            style="@style/text_view_subtitle"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"

            tools:text="RFW4I70"
            />

        <TextView
            android:id="@+id/item_txt_ano"
            style="@style/text_view_content"
            android:textSize="16sp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"
            android:layout_alignBaseline="@id/item_txt_marca"

            tools:text="2020"
            />


    </RelativeLayout>
</LinearLayout>