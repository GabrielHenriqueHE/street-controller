<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    android:background="@drawable/app_background"
    tools:context=".activities.ActivityDetalheVeiculo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="16dp"

            android:paddingHorizontal="16dp"
            >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_back"
                style="@style/back_button"

                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                />
            
            <TextView
                style="@style/text_view_content"
                android:textSize="20sp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_toEndOf="@id/btn_back"
                android:layout_centerInParent="true"

                android:layout_marginStart="8dp"

                android:text="Voltar"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_descricao_veiculo"

            style="@style/text_view_title"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            tools:text="Honda CG 160 Fan" />

        <TextView
            android:id="@+id/txt_tipo_veiculo"

            style="@style/text_view_subtitle"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            tools:text="Motocicleta" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:paddingHorizontal="24dp">

            <TextView
                android:id="@+id/labelFor_marca"

                style="@style/text_view_label"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"

                android:text="Marca: " />

            <TextView
                android:id="@+id/txt_marca"

                style="@style/text_view_content"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"

                android:layout_toEndOf="@id/labelFor_marca"

                tools:text="Honda" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingHorizontal="24dp">

            <TextView
                android:id="@+id/labelFor_modelo"

                style="@style/text_view_label"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"

                android:text="Modelo: " />

            <TextView
                android:id="@+id/txt_modelo"

                style="@style/text_view_content"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@id/labelFor_modelo"

                tools:text="CG 160 Fan" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingHorizontal="24dp">

            <TextView
                android:id="@+id/labelFor_ano"

                style="@style/text_view_label"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"

                android:text="Ano: " />

            <TextView
                android:id="@+id/txt_ano"

                style="@style/text_view_content"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@id/labelFor_ano"

                tools:text="2020" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingHorizontal="24dp">

            <TextView
                android:id="@+id/labelFor_cor"

                style="@style/text_view_label"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"

                android:text="Cor: " />

            <TextView
                android:id="@+id/txt_cor"

                style="@style/text_view_content"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@id/labelFor_cor"

                tools:text="Preta" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingHorizontal="24dp">

            <TextView
                android:id="@+id/labelFor_placa"

                style="@style/text_view_label"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"

                android:text="Placa: " />

            <TextView
                android:id="@+id/txt_placa"

                style="@style/text_view_content"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@id/labelFor_placa"

                tools:text="RFW4I70" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingHorizontal="24dp">

            <TextView
                android:id="@+id/labelFor_condutor"

                style="@style/text_view_label"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"

                android:text="Condutor: " />

            <TextView
                android:id="@+id/txt_condutor"

                style="@style/text_view_content"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@id/labelFor_condutor"

                tools:text="Gabriel Evaristo" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingHorizontal="24dp">

            <TextView
                android:id="@+id/labelFor_documento_condutor"

                style="@style/text_view_label"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"

                android:text="Documento: " />

            <TextView
                android:id="@+id/txt_documento_condutor"

                style="@style/text_view_content"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@id/labelFor_documento_condutor"

                tools:text="123.456.789-00" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_adicionar_condutor"
                style="@style/action_button"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginHorizontal="24dp"
                android:layout_marginVertical="4dp"

                android:text="ADICIONAR CONDUTOR" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_editar_condutor"
                style="@style/action_button"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginVertical="2dp"
                android:layout_marginHorizontal="24dp"

                android:visibility="gone"

                android:text="EDITAR CONDUTOR"

                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_remover_condutor"
                style="@style/action_button"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginVertical="2dp"
                android:layout_marginHorizontal="24dp"

                android:visibility="gone"

                android:text="REMOVER CONDUTOR"

                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_excluir_veiculo"

                style="@style/action_button"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginHorizontal="24dp"

                android:text="EXCLUIR VEÍCULO" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>